---
import BaseLayout from "@layouts/BaseLayout.astro";

const title = `Error 404`;
const description = `Error 404`;
---

<BaseLayout title={title} description={description}>
    <section class="flex items-center h-full p-16">
      <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
        <div class="max-w-md text-center">
          <h2 class="mb-8 font-bold text-9xl">
            <span class="sr-only">Error</span>
            <span class="dark:text-neutral-400 text-4xl">404</span>
          </h2>
          <p class="dark:text-neutral-400 text-3xl font-semibold md:text-3xl">Sorry, we couldn't find this page.</p>
          <p class="mt-4 mb-8 text-lg text-muted dark:text-neutral-400">
            But don't worry, you can find plenty of other things on our homepage.
          </p>
        <div class="mt-4">
          <a href={`/`} class="bg-neutral-200 hover:bg-neutral-300 rounded-full text-center px-3 py-2 text-sm font-semibold no-underline">Back to homepage</a></div>
        </div>
      </div>
    </section>
  </BaseLayout>