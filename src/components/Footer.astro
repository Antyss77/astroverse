---
import { Icon } from "astro-icon/components";
import Link from "@components/Links.astro";
import { BRAND_NAME, FooterLinks } from "@consts";
const today = new Date();
---

<footer class="w-full bg-white text-sm py-4 dark:bg-neutral-900">
  <nav class="max-w-[85rem] w-full mx-auto px-4" aria-label="Global">
    <div class="flex flex-col sm:flex-row sm:justify-between items-center">
      <div id="navbar-alignment" class="internal-links sm:order-2">
        <div
          class="flex flex-row sm:flex-row gap-5 mt-2 sm:items-center sm:mt-0 sm:ps-5"
        >
          {
            FooterLinks.map((link) => (
              <Link
                href={link.href}
                class="font-medium text-neutral-600 hover:text-neutral-400 dark:text-neutral-400 dark:hover:text-neutral-500"
              >
                {link.title}
              </Link>
            ))
          }
        </div>
      </div>

      <div class="sm:order-3 flex flex-wrap gap-2 mt-2 sm:gap-0 sm:mb-0">
        <button
          type="button"
          class="py-2 px-3 inline-flex items-center gap-x-2 bg-white text-neutral-800 hover:bg-neutral-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:text-neutral-400 dark:hover:bg-neutral-00 relative"
        >
          <a href="/rss.xml/" class="absolute inset-0 z-10" aria-label="RSS"
          ></a>
          <Icon name="tabler:rss" class="icon-base" />
        </button>
        <button
          type="button"
          class="py-2 px-3 inline-flex items-center gap-x-2 bg-white text-neutral-800 hover:bg-neutral-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:text-neutral-400 dark:hover:bg-neutral-900 relative"
        >
          <a
            href="https://twitter.com/astrodotbuild"
            class="absolute inset-0 z-10"
            aria-label="X"></a>
          <Icon name="tabler:brand-x" class="icon-base" />
        </button>
        <button
          type="button"
          class="py-2 px-3 inline-flex items-center gap-x-2 bg-white text-neutral-800 hover:bg-neutral-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:text-neutral-400 dark:hover:bg-neutral-900 relative"
        >
          <a
            href="https://twitter.com/astrodotbuild"
            class="absolute inset-0 z-10"
            aria-label="Github"></a>
          <Icon name="tabler:brand-github" class="icon-base" />
        </button>
      </div>

      <div class="sm:order-1 mt-2 sm:mb-0">
        <a class="flex-none dark:text-neutral-400" href="/"
          >{BRAND_NAME} &copy; {today.getFullYear()}</a
        >
      </div>
    </div>
  </nav>
</footer>
